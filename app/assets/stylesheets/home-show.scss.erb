body {
  font-family: $font-family-base !important;
}

.navbar.navbar-default {
  background-color: white;
  border-radius: 0;
  box-shadow: 0 1px 3px rgba(0,0,0,.2);
  margin-bottom: 0;
}

.no-margin-top {
  margin-top: 0px !important;
  border: none;
  box-shadow: none;
}

.movie-theater-landing {
  height: 40vh;
  background-size: cover;
  color: white;
  background-position: center;
  padding-top: $font-size-h1*1.5;
  background-image: url(<%= asset_path 'cinema.jpg' %>);
  margin-left: 0 !important;
  margin-right: 0 !important;
}

.movie-seats-landing {
  height: 40vh;
  color: white;
  background-size: cover;
  background-image: url(<%= asset_path 'seats.jpg' %>);
  margin-left: 0 !important;
  margin-right: 0 !important;
}

.movie-app-page-header {
  background-size: cover;
  background-position: center;
  padding-top: $font-size-h1;
  border-bottom: 4px solid $brand-primary;
}


.date {
  padding: ($font-size-h2 * 1.5) $font-size-h4;
  color: $gray-light;
  background-color: $brand-light-gray;

  a {
    color: inherit;
  }
}

@media (max-width: 768px) {
  .movie-theater-landing {
    padding: 1.5em 0;
    height: auto;
    h1 {
      font-size: 2em;
    }

    h4 {
      font-size: 1em;
      font-weight: 200;
    }
  }

  .dates-list {
    width: 100%;
    overflow: scroll;
    margin: 0;
    white-space: nowrap;
      li {
        display: inline-block;
        margin-left: -4px;
        padding: 0 !important;
      }
    }

  .date {
    font-size: 12px;
    padding: 25px 12px;
    border-left: 1px solid rgba(0,0,0,.2);
  }

}

a:hover {
  text-decoration: none !important;
}

.date:hover {
  text-decoration: none !important;
  border-top: 4px solid $brand-primary;
  color: $text-color;
}

.active {
  background-color: $brand-light-gray;
  border-top: 4px solid $brand-primary;
  color: $text-color;
}

.movie-row {
  box-shadow: 0 1px 3px rgba(0,0,0,.1);
  padding: 10px 0;
  margin-top: $font-size-h2;
}

.time-button {
  background-color: $brand-primary;
  color: white;
  font-weight: 600 !important;
  margin-top: 4px;
}


.sales-info-box {
  border-left: 4px solid $brand-primary;
  padding: 5px 15px;

  .sales-type {
    opacity: .6;
  }

  .sales-number {
    margin-top: 4px;
    font-weight: 300;
    font-size: 54px;
  }
}

.footer {
  background-color: $brand-light-gray;
  width: 100%;
  padding: 40px 0;
  margin-top: 25px;
}

.movie-poster {
  height: 300px;
  box-shadow: 0 1px 2px rgba(0,0,0,.2);
}

#other-show-times {
  display: none;
}
